{
    "extends" : [
        "eslint:recommended"
    ],
    "env" : {
        "es6": true,
        "browser" : true,
        "node": true
    },
    "globals": {
      "__dirname": false,
      "__filename": false,
      "require": false,
      "module": false
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "rules": {
        "curly"                    : [0], // http://eslint.org/docs/rules/curly
        "eqeqeq"                   : [2], // http://eslint.org/docs/rules/eqeqeq
        "indent"                   : [2, 2], // http://eslint.org/docs/rules/indent
        "key-spacing"              : [1, { // http://eslint.org/docs/rules/key-spacing
            "mode": "minimum"
        }],
        "max-len"                  : [0],
        "no-alert"                 : [1], // http://eslint.org/docs/rules/no-alert
        "no-console"               : [0], // http://eslint.org/docs/rules/no-console
        "no-mixed-spaces-and-tabs" : [2, "smart-tabs"], // http://eslint.org/docs/rules/no-mixed-spaces-and-tabs
        "no-multi-spaces"          : [1, { // http://eslint.org/docs/rules/no-multi-spaces
            "exceptions" : {
                "Property"           : true,
                "VariableDeclarator" : true
            }
        }],
        "no-underscore-dangle"     : [0], // http://eslint.org/docs/rules/no-underscore-dangle
        "no-unused-vars"           : [1, { // http://eslint.org/docs/rules/no-unused-vars
            "vars" : "local",
            "args" : "none"
        }],
        "no-use-before-define"     : [2, "nofunc"], // http://eslint.org/docs/rules/no-use-before-define
        "quotes"                   : [2, "single"], // http://eslint.org/docs/rules/quotes
        "valid-jsdoc"              : [2, { // http://eslint.org/docs/rules/valid-jsdoc
            "requireReturn"            : false,
            "requireReturnDescription" : false
        }]
    }
}
